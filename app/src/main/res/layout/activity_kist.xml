<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.araujojordan.kist.Kist
        android:id="@+id/kistView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:itemLayout="@layout/item" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:gravity="end"
        android:orientation="vertical">

        <ToggleButton
            android:id="@+id/headerToggleButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOff="Header OFF"
            android:textOn="Header ON" />

        <ToggleButton
            android:id="@+id/emptyToggleButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOff="Empty OFF"
            android:textOn="Empty ON" />

        <ToggleButton
            android:id="@+id/loadingToggleButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOff="Loading OFF"
            android:textOn="Loading ON" />


        <ToggleButton
            android:id="@+id/footerToggleButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOff="Footer OFF"
            android:textOn="Footer ON" />

        <Button
            android:id="@+id/addKistButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add" />
    </LinearLayout>
</FrameLayout>